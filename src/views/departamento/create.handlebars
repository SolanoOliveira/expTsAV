<div class="col-lg-12">
    <div class="page-header">
        <h1 id="tables">Adicionar Departamentos</h1>
    </div>

    <div class="bs-component col-8">
        <form action="/departamento/create" method="post">
            <div class="form-group">
                <label class="col-form-label mt-2" for="name">Nome</label>
                <input type="text" class="form-control" id="name" name="name" value="{{departamento.name}}">
                <div class="invalid-feedback" style="display:block">{{showErrors erros 'name'}}</div>
            </div>
            <div class="form-group">
                <label class="col-form-label mt-2" for="sigla">Sigla</label>
                <input type="text" class="form-control" id="sigla" name="sigla" value="{{departamento.sigla}}">
                <div class="invalid-feedback" style="display:block">{{showErrors erros 'sigla'}}</div>
            </div>
            <div class="form-group  mt-4">
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button type="submit" class="btn btn-primary">Adicionar</button>
            </div>
        </form>
    </div><!-- /example -->
</div>