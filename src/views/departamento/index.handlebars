<div class="col-lg-12">
  <div class="page-header d-flex justify-content-between align-items-center">
    <h1 id="tables">Adicionar Departamentos</h1>
    <div>
      <a class="btn btn-primary" href="/departamento/create"><i class="fa-solid fa-plus"></i></a>
    </div>
  </div>

  <div class="bs-component">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Sigla</th>
          <th scope="col">Opções</th>
        </tr>
      </thead>
      <tbody>
        {{#each departamentos}}
        <tr class="table-dark">
          <th scope="row">{{name}}</th>
          <td>{{sigla}}</td>
          <td>
            <a href="/departamento/update/{{id}}"><i class="fa-regular fa-pen-to-square"></i></a>
            <a href="/departamento/del/{{id}}"><i class="fa-solid fa-trash"></i></i></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div><!-- /example -->
</div>