<div class='col-lg-12'>
  <div class='page-header'>
    <h1 id='tables'>Criar usu√°rios</h1>
  </div>

  <div class='bs-component col-8'>
    <form id='signup-form' action='/signup' method='post'>
      <div class='form-group'>
        <label class='col-form-label mt-2' for='name'>Nome</label>
        <input
          type='text'
          class='form-control'
          id='name'
          name='name'
          value='{{name}}'
        />
        <div class='invalid-feedback' style='display:block'>{{showErrors
            erros
            'name'
          }}</div>
      </div>
        <div class='form-group'>
        <label class='col-form-label mt-2' for='email'>Email</label>
        <input
          type='email'
          class='form-control'
          id='email'
          name='email'
          value='{{email}}'
        />
        </div>
         <label class='col-form-label mt-2' for='email'>Departamentos</label>
        <select class="form-select" id="exampleSelect1" name="departamentoId">
            {{#each departamentos}}
                      <option value={{id}}>{{name}}</option>
            {{/each}}
        </select>
        <div class='form-group'>
        <label class='col-form-label mt-2' for='senha'>Senha</label>
        <input
          type='password'
          class='form-control'
          id='senha'
          name='senha'
          value='{{senha}}'
        />
        </div>
        <div class='form-group'>
        <label class='col-form-label mt-2' for='confirm-senha'>Confirme a senha</label>
        <input
          type='password'
          class='form-control'
          id='confirm-senha'
          name='confirm-senha'
          value='{{senha}}'
        />
        <div class='invalid-feedback' style='display:block' id="confirm-senha-error">{{showErrors
            erros
            'name'
          }}</div>
        </div>        
      </div>
      <div class='form-group mt-4'>
        <input type='hidden' name='_csrf' value='{{csrf}}' />
        <button type='submit' class='btn btn-primary'>Adicionar</button>
      </div>
    </form>
  </div><!-- /example -->
</div>